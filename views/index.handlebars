<h1>burger Saver</h1>

<h3>Save burgers</h3>

<ul>
  {{#each burgers}}
  	<li>
       <p>Burger: {{this.burger_name}}</p>
  	   <p>devoured: {{this.devoured}}</p>
  	</li>
  {{/each}}
</ul>

<div>
  <form class="create-update-form" action="/burgers/create" method="POST">
  	<textarea type="text" name="burger_form"></textarea>

  	<button type="submit">Submit</button>
  </form>
</div>
